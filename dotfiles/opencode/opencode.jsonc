{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "model": "anthropic/claude-sonnet-4-5",
  "small_model": "anthropic/claude-haiku-4-5",
  "provider": {
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-thinking": {
          "id": "claude-sonnet-4-5",
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            },
          }
        }
      }
    }
  },
  "permission": {
    "bash": {
      "sudo *": "deny",
      "git status *": "allow",
      "git diff *": "allow",
      "git log *": "allow",
      "ls *": "allow",
      "pwd": "allow",
      "cd *": "allow",
      "wc *": "allow",
      "rg *": "allow",
      "find *": "allow",
      "*": "ask"
    }
  },
  "mcp": {
    "ctx7": {
      "enabled": true,
      "type": "remote",
      "url": "https://mcp.context7.com/mcp"
    },
    "bgtask": {
      "enabled": true,
      "type": "local",
      "command": ["npx", "-y", "@nanoseil/mcp-bgtask"]
    }
  }
}
